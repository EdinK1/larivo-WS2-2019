type User {
  id: ID! @id
  userName: String! @unique
  email: String! @unique
  password: String!
  bio: String!
  guest: Boolean! @default(value: false)
  following: [User!]! @relation(name: "User")
  followers: [User!]! @relation(name: "User")
}

type Story {
  id: ID! @id
  createdAt: DateTime! @createdAt
  title: String! 
  content: String!  
  readTime: String!
  hashtags: [User!]! @relation(name: "User")
  likes: [User!]! @relation(name: "User")
  loves: [User!]! @relation(name: "User")
  neutrals: [User!]! @relation(name: "User")
  sads: [User!]! @relation(name: "User")
  claps: [User!]! @relation(name: "User")
  isPublished: Boolean! @default(value: false)
}

type Hashtag {
  id: ID! @id
  name: String!
}


